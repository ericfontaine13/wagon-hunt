<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 100%), url('<% image_path "background.jpg"%>');">
  <div class="banner-content">
    <h1><%= @product.name %></h1>
    <p><%= @product.tagline %></p>
    <%= link_to "Website", @product.url, class: "btn btn-primary btn-lg" %>
      <ul class="list-inline product-controls hidden-sm hidden-xs">
        <li>
          <%= link_to edit_product_path(@product) do %>
           <i class="glyphicon glyphicon-pencil"></i>
          <% end %>
        </li>
        <li>
          <%= link_to product_path(@product), method: :delete do %>
           <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        </li>
      </ul>
  </div>
</div>
